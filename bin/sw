#!/usr/bin/env zsh

sw_sync() { sudo nix-channel --update nixos "$@" ; }

sw_search() { nix search "$@" ; }

sw_update() { sudo nixos-rebuild switch --upgrade "$@" ; }

sw_install() { echo "Install packages by adding to $DOTFILES/nixos/packages.nix" ; }

sw_remove() { echo "Remove packages by removing from $DOTFILES/nixos/packages.nix" ; }

sw_clean() { echo "No clean." ; }

# Functionality Wrapper
# =====================

command="$1" && shift
sw_$command $@
