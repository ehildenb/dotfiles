#!/usr/bin/env zsh

sw_sync() { sudo apt update $@ ; }

sw_search() { apt search $@ ; }

sw_update() { sudo apt upgrade $@ && sudo apt dist-upgrade $@ ; }

sw_install() { sudo apt install $@ ; }

sw_remove() { sudo apt purge $@ ; }

sw_clean() { sudo apt autoremove $@ ; }

# Functionality Wrapper
# =====================

command="$1" && shift
sw_$command $@
