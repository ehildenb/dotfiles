#!/usr/bin/env zsh

sw_sync() { sudo pacman --sync --refresh $@ ; }

sw_search() { pacman --sync --search $@ ; }

sw_update() { sudo pacman --sync --sysupgrade $@ ; }

sw_install() { sudo pacman --sync $@ ; }

sw_remove() { sudo pacman --remove --recursive $@ ; }

sw_clean() { sudo pacman --remove --recursive --nosave \
		$(pacman --query --unrequired --deps --quiet) $@ ; }

# Functionality Wrapper
# =====================

command="$1" && shift
sw_$command $@
